<p id="notice"><%= notice %></p>
    <!-- Primary raised block button with ripple effect -->
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <button data-target="#form-dialog-story" data-toggle="modal"class="btn pmd-btn-raised btn-primary btn-block pmd-ripple-effect" type="button" style="margin: 15px; width: 96%;">Make a New Story</button>
    </div>
</div>

    <div class="row">
        <!-- Media, Title, and Description area -->
        <% if signed_in? %>
            <% if current_user.stories != nil %>
                <% current_user.stories.each do |story| %>
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="pmd-card pmd-card-default pmd-z-depth" style="margin: 15px;">

                            <!-- Card media -->
                            <div class="pmd-card-media">
                                <img width="1184" height="666" class="img-responsive" src="http://propeller.in/assets/images/profile-pic.png">
                            </div>
                            
                            <!-- Card header -->
                            <div class="pmd-card-title">
                                <h2 class="pmd-card-title-text" style="font-size: 20px;"><%= story.title.upcase %></h2>
                                <span class="pmd-card-subtitle-text"><%= story.description.capitalize %></span>
                            </div>
                            
                            <!-- Card action -->
                            <div class="pmd-card-actions">
                                <button class="btn pmd-btn-flat pmd-ripple-effect btn-primary" type="button">Primary</button>
                                <button type="button" class="btn pmd-btn-flat pmd-ripple-effect btn-default">Action</button>
                            </div>

                        </div>
                    </div>
                <% end %>
            <% end %>
        <% end %>
        
    </div>  
  